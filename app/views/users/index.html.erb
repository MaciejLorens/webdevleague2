<h1>User#index</h1>
<p>Find me in app/views/user/index.html.erb</p>

<table class='table'>
  <tr>
    <th>Nick</th>
    <th>Email</th>
    <th>Skills</th>
    <th>Last Sign In</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.nick %></td>
      <td><%= user.email %></td>
      <td><%= user.skills.map(&:name).join(', ') %></td>
      <td>
        <% if user.last_sign_in_at.present? %>
          <%= time_ago_in_words(user.last_sign_in_at) %> ago
        <% end %>
      </td>
      <td>
        <%= link_to 'Edit', user_path(user) %>
        <%#= link_to 'Delete', user_path(user), method: 'delete' %>
      </td>
    </tr>
  <% end %>
</table>
